<div class="jumbotron">
  <h1>Vista de Productos</h1>
  <br />

  {{#if productos}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
          </tr>
        </thead>
        <tbody>
          {{#each productos}}
            <tr>
              <td>{{this.title}}</td>
              <td>${{this.price}}</td>
              <td><img width="50" src={{this.thumbnail}} alt="Not found" /></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
  {{/if}}
</div>